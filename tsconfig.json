{
    "compilerOptions": {
      "target": "es5",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strictPropertyInitialization": false,
      "experimentalDecorators": true,
      "useDefineForClassFields": true,
    },
    "include": ["src/**/*"]
  }